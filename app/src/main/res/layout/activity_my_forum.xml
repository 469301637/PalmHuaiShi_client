<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liurui.palmhuaishi_client.ui.activity.MyForumActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="智慧淮师论坛"
            android:textColor="@color/red"
            android:textSize="30dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/myforum_list">
    </ListView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:layout_gravity="center"
                android:id="@+id/myforum_upload_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/upload"
                app:elevation="5dp"
                app:fabSize="mini" />
        </LinearLayout>


        //最底下的导航栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bbs_but11"
                android:src="@drawable/tab_1"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/bbs_but21"
                android:src="@drawable/tab_2"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/bbs_but31"
                android:src="@drawable/tab_3"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bbs_but41"
                android:src="@drawable/tab_4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="          首页" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="资料" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="论坛" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=" 我的" />
        </LinearLayout>

</LinearLayout>
</android.support.constraint.ConstraintLayout>
